<% if flash[:notice] %>
    <div class="alert alert-info">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <%= notice %>
    </div>
<% end %>
<% if flash[:alert] %>
    <div class="alert alert-block ">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <%= alert %>
    </div>
<% end %>
<% if flash[:error] %>
    <div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <%= flash[:error] %>
    </div>
<% end %>
<% if flash[:success] %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <%= flash[:success] %>
    </div>
<% end %>