<%= stylesheet_link_tag 'account_login', media:'all'%>
<%= content_for(:title,'新账户注册') %>
<div class="container marketing">
  <div style="padding-top: 150px;height: 550px;">

    <div style="float: left;width: 35%;">
      <div style="padding-left: 80px">
      <div  class= "popup">
        <div class= "pop-box">
          <div style="height: 400px">
            <div class="pop-tit" style="height: 50px">
              <p style="font-size: 35px;color: #FFFFFF;padding-top: 15px;padding-left: 15px">新账户注册</p>
            </div>
            <div style="text-align: center">
              <form accept-charset="utf-8" action="/account/user_create" method="post">
                <% if flash[:error] %>
                    <div style="padding-top: 10px;width: 251px;padding-left: 60px;">
                      <div class="alert alert-info">
                        <%= flash[:error] %>
                      </div>
                    </div>
                <% end %>
                <div class="input-prepend" title="请输入手机号" data-rel="tooltip" style="padding-top: <% if flash[:error] %>0px<% else %>60px<% end %>" data-placement="top">
                  <span class="add-on"><i class="icon-envelope"></i></span>
                  <input type="text" name="phone" value="<%= params[:phone] %>" maxlength="11" size="5" onKeypress="if (event.keyCode < 48 || event.keyCode > 57) event.returnValue = false;" class="input-large" placeholder="手机 ❤ 找回密码">
                </div>
                <div class="clearfix"></div>
                <div class="input-prepend" title="请输入昵称" data-rel="tooltip" style="padding-top: 10px">
                  <span class="add-on"><i class="icon-tag"></i></span>
                  <input type="text" name="nickname" value="<%= params[:nickname] %>" class="input-large" placeholder="昵称 ❤ 带你装逼带你飞">
                </div>
                <div class="clearfix"></div>

                <div class="input-prepend" title="请输入您的登陆账号" data-rel="tooltip" data-placement="top" style="padding-top: 10px">
                  <span class="add-on"><i class="icon-user"></i></span>
                  <input id="account" type="text" name="account" value="<%= params[:account] %>" class="input-large" placeholder="账户 ❤ 拼音 QQ号 邮箱 ">
                </div>
                <div class="clearfix"></div>

                <div class="input-prepend" title="请输入您的登陆密码" data-rel="tooltip" style="padding-top: 10px">
                  <span class="add-on"><i class="icon-lock"></i></span>
                  <input type="password" name="password" class="input-large" placeholder="密码 ❤ 越复杂越安全">
                </div>
                <div class="clearfix"></div>

                <div style="padding-top: 10px">
                  <button type="submit" class="btn btn-success" style="width: 250px">注册</button>
                  <div class="clearfix"></div>
                </div>
                <div style="padding-top: 15px">
                  <span><a href="/account/user_forget_password" style="color: #ff0000">忘记密码？</a></span>
                  <span style="padding-left: 120px"><a href="/sign_up" style="color: #faa732">立即登录</a></span>
                </div>
              </form>
            </div>
          </div>
        </div>

      </div>
      </div>
    </div>

    <div style="float: right;width: 65%;">
      <img src="/images/constellation/<%= User.constellation_picture Time.now.strftime('%m%d').to_i %>.jpg" style="height: 405px;padding-left: 70px">
    </div>

  </div>
  <script>
      $('#account').change(function(){
          if($('#account').val().length < 6){
              alert('账号长度请大于5个字符');
              $('#password').val('');
              return false;
          }
          var reg = /^[\w!@#$%\^&\*\(\)_]{6,20}$/;
          if(!reg.test($.trim($('#account').val())))
          {
              alert("账号不能包含空格,汉字,回车等特殊符号");
              $('#account').val('');
              return false;
          }
      })
  </script>

</div>